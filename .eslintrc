{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },

  "globals": {
    "__VUEPRESS_DEV__": "readonly"
  },

  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "_+", "argsIgnorePattern": "_+" }]
  }
}
